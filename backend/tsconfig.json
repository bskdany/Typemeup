// configs based on https://www.totaltypescript.com/tsconfig-cheat-sheet
{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2023",
    "module": "EsNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es2022"
    ],
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    }
  }
}